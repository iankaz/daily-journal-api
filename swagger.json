        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "maxLength": 200
                  },
                  "content": {
                    "type": "string",
                    "maxLength": 5000
                  },
                  "date": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "mood": {
                    "type": "string",
                    "enum": ["very-happy", "happy", "neutral", "sad", "very-sad", "anxious", "excited", "grateful"]
                  },
                  "weather": {
                    "type": "string",
                    "enum": ["sunny", "cloudy", "rainy", "snowy", "stormy", "foggy", "windy"]
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string",
